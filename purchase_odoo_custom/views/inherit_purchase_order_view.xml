<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="inherit_purchase_order_views" model="ir.ui.view">
            <field name="name">purchase.order.inherit.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='currency_id']" position="after">
                    <field name="department_id"/>
                </xpath>
                <xpath expr="//field[@name='order_line']//tree//field[@name='product_qty']" position="before">
                    <field name="vendor_suggest_id"/>
                </xpath>
            </field>
        </record>
        <record id="inherit_purchase_order_line_views" model="ir.ui.view">
            <field name="name">purchase.order.line.inherit.form</field>
            <field name="model">purchase.order.line</field>
            <field name="inherit_id" ref="purchase.purchase_order_line_form2"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_qty']" position="after">
                    <!--                    <field name="vendor_suggest_id"/>-->
                </xpath>
            </field>
        </record>

    </data>
</odoo>